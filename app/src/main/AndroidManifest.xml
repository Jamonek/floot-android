<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.brentlrayjr.floot">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon"
        android:name="App"

        >
        <activity
            android:name=".SplashView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginView"
            android:label="@string/title_activity_login_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CampusFeedView"
            android:label="@string/title_activity_campus_feed_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateProfileViewActivity"
            android:label="@string/title_activity_create_profile_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
